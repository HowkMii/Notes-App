<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/titleTV" android:textSize="18sp"/>
    <TextView
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/descTV"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="Edit"
                android:layout_width="208dp"
                android:layout_height="wrap_content" android:id="@+id/editBtn"/>
        <Button
                android:text="Delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/delBtn"/>
    </LinearLayout>
</LinearLayout>